<div id="diabetesRiskInfoModal" tabindex="-1" aria-hidden="true" class="hidden overflow-y-auto overflow-x-hidden fixed top-0 right-0 left-0 z-50 justify-center items-center w-full md:inset-0 h-[calc(100%-1rem)] max-h-full">
    <div class="relative p-4 w-full max-w-2xl max-h-full">
        <!-- Modal content -->
        <div class="relative bg-white rounded-lg shadow dark:bg-gray-700">
            <!-- Modal header -->
            <div class="flex items-center justify-between p-4 md:p-5 border-b rounded-t dark:border-gray-600">
                <h3 class="text-xl font-semibold text-gray-900 dark:text-white">
                    Type 2 Diabetes Risk Assessment Score
                </h3>
                <button type="button" class="text-gray-400 bg-transparent hover:bg-gray-200 hover:text-gray-900 rounded-lg text-sm w-8 h-8 ms-auto inline-flex justify-center items-center dark:hover:bg-gray-600 dark:hover:text-white" data-modal-hide="diabetesRiskInfoModal">
                    <svg class="w-3 h-3" aria-hidden="true" xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 14 14">
                        <path stroke="currentColor" stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="m1 1 6 6m0 0 6 6M7 7l6-6M7 7l-6 6" />
                    </svg>
                    <span class="sr-only">Close modal</span>
                </button>
            </div>
            <!-- Modal body -->
            <div class="p-4 md:p-5 space-y-4 flex justify-between text-sm">
                <table class="table w-full text-sm text-left">
                    <thead class="bg-gray-50">
                        <tr>
                            <th class="px-6 py-3 whitespace-nowrap">Scores</th>
                            <th class="px-6 py-3 whitespace-nowrap">Risk</th>
                            <th class="px-6 py-3 whitespace-nowrap">Description</th>
                        </tr>
                    </thead>
                    <tbody>
                        <tr class="bg-white border-b">
                            <th scope="row" class="px-6 py-4 font-semibold text-green-500 whitespace-nowrap">Lower than 7</th>
                            <td class="px-6">Low</td>
                            <td class="px-6">Estimated 1 in 100 will develop disease</td>
                        </tr>
                        <tr class="bg-white border-b">
                            <th scope="row" class="px-6 py-4 font-semibold text-yellow-500 whitespace-nowrap">7-11</th>
                            <td class="px-6">Slightly elevated</td>
                            <td class="px-6">Estimated 1 in 25 will develop disease</td>
                        </tr>
                        <tr class="bg-white border-b">
                            <th scope="row" class="px-6 py-4 font-semibold text-orange-500 whitespace-nowrap">12-14</th>
                            <td class="px-6">Moderate</td>
                            <td class="px-6">Estimated 1 in 6 will develop disease</td>
                        </tr>
                        <tr class="bg-white border-b">
                            <th scope="row" class="px-6 py-4 font-semibold text-pink-600 whitespace-nowrap">15-20</th>
                            <td class="px-6">High</td>
                            <td class="px-6">Estimated 1 in 3 will develop disease</td>
                        </tr>
                        <tr class="bg-white border-b">
                            <th scope="row" class="px-6 py-4 font-semibold text-red-600 whitespace-nowrap">Higher than 20</th>
                            <td class="px-6">Very High</td>
                            <td class="px-6">Estimated 1 in 2 will develop disease</td>
                        </tr>
                    </tbody>
                </table>
            </div>
            <!-- Modal footer -->
            <div class="flex justify-end p-4 md:p-5 border-t border-gray-200 rounded-b">
                <button data-modal-hide="diabetesRiskInfoModal" type="button" class="text-white bg-primary-50 hover:bg-primary-50 focus:ring-4 focus:outline-none focus:ring-blue-300 font-medium rounded-lg text-sm px-5 py-2.5 text-center">I understand</button>
            </div>
        </div>
    </div>
</div>