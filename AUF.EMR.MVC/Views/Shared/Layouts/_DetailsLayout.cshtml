<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"]</title>
    <style>
        body {
            font-family: 'Poppins', sans-serif;
        }
    </style>
    <link href="~/css/output.css" rel="stylesheet">
    <link rel="stylesheet" href="~/lib/flowbite/dist/flowbite.css" />
    <link href="~/css/style.css" rel="stylesheet">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.1/css/all.min.css" integrity="sha512-DTOQO9RWCH3ppGqcWaEA1BIZOC6xxalwEsw9c2QQeAIftl+Vegovlnee1c9QX4TctnWMn13TZye+giMm8e2LwA==" crossorigin="anonymous" referrerpolicy="no-referrer" />
</head>
<body class="bg-gray-100">
    <header>
        @await Html.PartialAsync("Navigations/_FormNav");
    </header>
    <div class="">
        <main role="main" class="">
            @await Html.PartialAsync("Navigations/_FormSideBar", ViewData["Barangay"]);
            <div class="p-4 sm:ml-72">
                @RenderBody()
            </div>
        </main>
    </div>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    <script src="~/lib/flowbite/dist/flowbite.js"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>

