@model EditHouseholdMemberVM

@{
    ViewData["Title"] = "EditOralHealthInfo";
}

<h1>EditOralHealthInfo</h1>

<h4>HouseholdMember</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="EditOralHealthInfo">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="RequestUrl" value="@Model.RequestUrl" />
            <input type="hidden" asp-for="HouseholdMember.Id" value="@Model.HouseholdMember.Id" />
            <input type="hidden" asp-for="HouseholdNo" value="@Model.HouseholdNo" />
            <div class="form-group">
                <label asp-for="HouseholdMember.LastName" class="control-label"></label>
                <input asp-for="HouseholdMember.LastName" class="form-control" />
                <span asp-validation-for="HouseholdMember.LastName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="HouseholdMember.FirstName" class="control-label"></label>
                <input asp-for="HouseholdMember.FirstName" class="form-control" />
                <span asp-validation-for="HouseholdMember.FirstName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="HouseholdMember.MotherMaidenName" class="control-label"></label>
                <input asp-for="HouseholdMember.MotherMaidenName" class="form-control" />
                <span asp-validation-for="HouseholdMember.MotherMaidenName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="HouseholdMember.Sex" class="control-label"></label>
                <input asp-for="HouseholdMember.Sex" class="form-control" />
                <span asp-validation-for="HouseholdMember.Sex" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="HouseholdMember.Age" class="control-label"></label>
                <input asp-for="HouseholdMember.Age" class="form-control" />
                <span asp-validation-for="HouseholdMember.Age" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="HouseholdMember.Birthday" class="control-label"></label>
                <input asp-for="HouseholdMember.Birthday" class="form-control" />
                <span asp-validation-for="HouseholdMember.Birthday" class="text-danger"></span>
            </div>
            <div class="form-group ">
                <label class="control-label"></label>
                <div class="form-check form-check-inline">
                    <input class="form-check-input" type="radio" asp-for="HouseholdMember.IsNhts" value="true" />
                    <label class="form-check-label">NHTS</label>
                </div>
                <div class="form-check form-check-inline">
                    <input class="form-check-input" type="radio" asp-for="HouseholdMember.IsNhts" value="false" />
                    <label class="form-check-label">Non NHTS</label>
                </div>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a href="@Model.RequestUrl">Back to List</a>
</div>

