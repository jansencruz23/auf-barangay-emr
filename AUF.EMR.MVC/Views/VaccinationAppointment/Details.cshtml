@model DetailVaccinationAppointmentVM

@{
    ViewData["Title"] = "Details";
}

<h1>Details</h1>

<div>
    <h4>VaccinationAppointment</h4>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            Patient
        </dt>
        <dd class = "col-sm-10">
            @Model.VaccinationAppointment.PatientRecord.Patient.FullName
        </dd>
        <dt class = "col-sm-2">
            Vaccination Date
        </dt>
        <dd class = "col-sm-10">
            @Model.VaccinationAppointment.VaccinationDate.ToString("MMM dd, yyyy")
        </dd>
        <dt class = "col-sm-2">
            Weight
        </dt>
        <dd class = "col-sm-10">
            @Model.VaccinationAppointment.Weight
        </dd>
        <dt class = "col-sm-2">
            Height
        </dt>
        <dd class = "col-sm-10">
            @Model.VaccinationAppointment.Height
        </dd>
        <dt class = "col-sm-2">
            Temperature
        </dt>
        <dd class = "col-sm-10">
            @Model.VaccinationAppointment.Temperature
        </dd>
        <dt class = "col-sm-2">
            Vaccines
        </dt>
        <dd class = "col-sm-10">
            @foreach (var vaccine in Model.VaccinationAppointment.VaccinationRecords)
            {
                @vaccine.Vaccine.Name <br />
            }
        </dd>
    </dl>
</div>
<div>
    <a asp-action="Edit" asp-route-id="@Model?.VaccinationAppointment.Id" asp-route-householdNo="@Model.HouseholdNo">Edit</a> |
    <a asp-action="Index">Back to List</a>
</div>
