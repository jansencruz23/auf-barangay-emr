                        <div class="ml-2 w-full flex-1">
                            <div>
                                <div class="mt-3 text-2xl font-semibold leading-8" style="color:#F7F6F6">@Model.PregAppointments</div>
                                <div class="mt-1 text-lg text-gray-600" style="color:#F7F6F6">Pregnancy</div>
