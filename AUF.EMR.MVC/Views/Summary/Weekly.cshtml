        <div class="grid grid-cols-12 gap-6">
            <div class="col-span-12">
                <div class="flex justify-between">
                    <h2 class="text-3xl font-bold text-gray-800">Welcome to your Checkup Summary, @Model.Name</h2> <!--Fetch username here-->
