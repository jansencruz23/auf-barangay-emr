@model SummaryVM

@{
    if (string.IsNullOrWhiteSpace(Model.HouseholdNo))
    {
        Layout = "Layouts/_ProfileLayout";
    }
    else
    {
        Layout = "Layouts/_FormLayout";
    }

    ViewData["HouseholdNo"] = Model.HouseholdNo;
}

<main class="mt-8 flex justify-center items-center">
