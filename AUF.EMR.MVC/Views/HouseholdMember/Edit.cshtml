                    <div class="mb-4">
                        <label asp-for="HouseholdMember.FourthQtrClassification" class="block mb-2 text-sm font-medium text-gray-700">Fourth Quarter Visit</label>

                        <div id="fourthSelectedClassifications" class="mb-2 flex flex-wrap gap-2 w-full md:w-3/4">
                            <!-- Selected classifications will be added here dynamically -->
                        </div>

                        <!-- Dropdown button -->
                        <button id="dropdownHelperButton4" data-dropdown-toggle="dropdownHelper4" class="text-white bg-blue-700 hover:bg-blue-800 focus:ring-4 focus:outline-none focus:ring-blue-300 font-medium rounded-lg text-sm px-5 py-2.5 text-center justify-between inline-flex items-center w-72" type="button">
                            Classifications <svg class="w-2.5 h-2.5 ms-3" aria-hidden="true" xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 10 6">
