<script>
    document.addEventListener('DOMContentLoaded', function () {
        function updateSelectedClassifications(containerSelector, checkboxSelector) {
            const selectedContainer = document.querySelector(containerSelector);
            const checkboxes = document.querySelectorAll(checkboxSelector);

            checkboxes.forEach(function (checkbox) {
                checkbox.addEventListener('change', function () {
                    selectedContainer.innerHTML = '';
                    checkboxes.forEach(function (checkbox) {
                        if (checkbox.checked) {
                            const badge = document.createElement('span');
                            badge.classList.add('inline-flex', 'items-center', 'px-3', 'py-0.5', 'rounded-full', 'text-sm', 'font-medium', 'bg-blue-100', 'text-blue-800', 'mr-2', 'mb-2');
                            badge.textContent = checkbox.dataset.name;
                            selectedContainer.appendChild(badge);
                        }
                    });
                });

                // Initial update to display already selected classifications
                if (checkbox.checked) {
                    const badge = document.createElement('span');
                    badge.classList.add('inline-flex', 'items-center', 'px-3', 'py-0.5', 'rounded-full', 'text-sm', 'font-medium', 'bg-blue-100', 'text-blue-800', 'mr-2', 'mb-2');
                    badge.textContent = checkbox.dataset.name;
                    selectedContainer.appendChild(badge);
                }
            });
        }

        function toggleOtherRelation() {
            const relationshipToHead = document.getElementById("relationshipToHead").value;
            const otherRelationInput = document.getElementById("otherRelationInput");

            if (relationshipToHead === "5") {
                otherRelationInput.disabled = false;
            } else {
                otherRelationInput.disabled = true;
                otherRelationInput.value = '';  // Clear the input field if disabled
            }
        }

        document.getElementById('relationshipToHead').addEventListener('change', toggleOtherRelation);

        updateSelectedClassifications('#firstSelectedClassifications', '.first-classification-checkbox');
        updateSelectedClassifications('#secondSelectedClassifications', '.second-classification-checkbox');
        updateSelectedClassifications('#thirdSelectedClassifications', '.third-classification-checkbox');
        updateSelectedClassifications('#fourthSelectedClassifications', '.fourth-classification-checkbox');
        toggleOtherRelation();
    });
</script>


