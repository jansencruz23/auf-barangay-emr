                        <select id="relationshipToHead" asp-for="HouseholdMember.RelationshipToHouseholdHead" required class="bg-gray-50 border border-gray-300 text-gray-900 text-sm rounded-lg focus:ring-blue-500 focus:border-blue-500 p-2.5 w-full md:w-4/5">
                            <option value="" selected>Select relation to HH head</option>
                            <option value="1">Head</option>
                            <option value="2">Spouse</option>
                            <option value="3">Son</option>
                            <option value="4">Daughter</option>
                            <option value="5">Other</option>
                        </select>
                        <span asp-validation-for="HouseholdMember.RelationshipToHouseholdHead" class="block mb-2 text-sm text-red-700"></span>
                    </div>
                    <div class="mb-4">
