                                            </div>
                                            <div class="ms-2 text-sm">
                                                <label for="second-helper-checkbox-@i" class="font-medium text-gray-900 dark:text-gray-300">
                                                    <div>@Model.SecondQtrClassifications[i].Name</div>
                                                    <p id="second-helper-checkbox-text-@i" class="text-xs font-normal text-gray-500 dark:text-gray-300">@Model.SecondQtrClassifications[i].Description</p>
                                                </label>
                                            </div>
                                        </div>
                                    </li>
                                }
                            </ul>
                        </div>
                        <span asp-validation-for="HouseholdMember.SecondQtrClassification" class="block mb-2 text-sm text-red-700"></span>
                    </div>

