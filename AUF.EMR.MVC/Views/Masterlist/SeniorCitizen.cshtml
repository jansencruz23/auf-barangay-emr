@model HouseholdMemberListVM

@{
    ViewData["Title"] = "Masterlist of Senior Citizens";
}

<h1>List of Senior Citizens</h1>

@Html.PartialAsync("_FormNav", Model.HouseholdNo).Result

<table class="table">
    <thead>
        <tr>
            <th>
                HH. NO/ Family Serial No.
            </th>
            <th>
                Name
            </th>
            <th>
                Address
            </th>
            <th>
                Sex
            </th>
            <th>
                Age
            </th>
            <th>
                Date of Birth
            </th>
            <th>
                NHTS
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model.HouseholdMembers)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.HouseholdNo)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.FullName)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Household.FullAddress)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Sex)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Age)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Birthday)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.IsNhts)
                </td>
                <td>
                    <a asp-action="Edit" asp-controller="HouseholdMember" asp-route-id="@item.Id" asp-route-requestUrl="@Model.RequestUrl">Edit</a> |
                    <a asp-action="Details" asp-route-id="@item.Id">Details</a> |
                    <a asp-action="Delete" asp-route-id="@item.Id">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>
