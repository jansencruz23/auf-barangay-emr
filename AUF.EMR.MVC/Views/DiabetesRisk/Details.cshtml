@model DetailDiabetesRiskVM

@{
    ViewData["Title"] = "Diabetes Assessment Risk Form - Details";
    ViewData["HouseholdNo"] = Model.HouseholdNo;
}

<div class="container mx-auto px-4 py-8">
    <div class="bg-white shadow-md rounded-lg p-8 mb-6">
        <div class="flex justify-between">
            <div>
                <h1 class="text-xl">Details</h1>
                <h1 class="text-2xl font-bold text-gray-800 mb-4">Type 2 Diabetes Risk Assessment Form</h1>
            </div>
            <div class="flex justify-end mb-6 gap-3">
                <div class="bg-blue-500 hover:bg-blue-600 inline-flex items-center text-white py-2 px-5 rounded-lg w-28">
                    <button type="button" onclick="print('Print', 'DiabetesRisk', '@Model.HouseholdNo?.ToString()', '@Model.DiabetesRisk.Id', '@Model.DiabetesRisk.HouseholdMemberId')">
                        <svg class="w-5 h-5 text-white inline-block mr-1" aria-hidden="true" xmlns="http://www.w3.org/2000/svg" width="24" height="24" fill="currentColor" viewBox="0 0 24 24">
                            <path fill-rule="evenodd" d="M8 3a2 2 0 0 0-2 2v3h12V5a2 2 0 0 0-2-2H8Zm-3 7a2 2 0 0 0-2 2v5a2 2 0 0 0 2 2h1v-4a1 1 0 0 1 1-1h10a1 1 0 0 1 1 1v4h1a2 2 0 0 0 2-2v-5a2 2 0 0 0-2-2H5Zm4 11a1 1 0 0 1-1-1v-4h8v4a1 1 0 0 1-1 1H9Z" clip-rule="evenodd" />
                        </svg>
                        <span class="hidden md:inline text-sm">Print</span>
                    </button>
                </div>
                <a asp-action="Edit" asp-route-id="@Model.DiabetesRisk.Id" asp-route-householdNo="@Model.HouseholdNo" class="px-5 py-2 text-sm font-medium text-center inline-flex items-center text-white bg-primary-50 rounded-lg focus:ring-4 focus:outline-none focus:ring-green-200">
                    <svg class="w-6 h-6 text-white" aria-hidden="true" xmlns="http://www.w3.org/2000/svg" width="24" height="24" fill="currentColor" viewBox="0 0 24 24">
                        <path fill-rule="evenodd" d="M11.32 6.176H5c-1.105 0-2 .949-2 2.118v10.588C3 20.052 3.895 21 5 21h11c1.105 0 2-.948 2-2.118v-7.75l-3.914 4.144A2.46 2.46 0 0 1 12.81 16l-2.681.568c-1.75.37-3.292-1.263-2.942-3.115l.536-2.839c.097-.512.335-.983.684-1.352l2.914-3.086Z" clip-rule="evenodd" />
                        <path fill-rule="evenodd" d="M19.846 4.318a2.148 2.148 0 0 0-.437-.692 2.014 2.014 0 0 0-.654-.463 1.92 1.92 0 0 0-1.544 0 2.014 2.014 0 0 0-.654.463l-.546.578 2.852 3.02.546-.579a2.14 2.14 0 0 0 .437-.692 2.244 2.244 0 0 0 0-1.635ZM17.45 8.721 14.597 5.7 9.82 10.76a.54.54 0 0 0-.137.27l-.536 2.84c-.07.37.239.696.588.622l2.682-.567a.492.492 0 0 0 .255-.145l4.778-5.06Z" clip-rule="evenodd" />
                    </svg>
                    Update
                </a>
                <button data-modal-target="popup-modal-2" data-member-id="@Model.DiabetesRisk.Id" data-modal-toggle="popup-modal-2" class="delete-btn px-5 py-2 text-sm font-medium text-center inline-flex items-center text-white bg-danger-50 rounded-lg focus:ring-4 focus:outline-none focus:ring-red-100" type="button">
                    <svg class="w-6 h-6 text-white" aria-hidden="true" xmlns="http://www.w3.org/2000/svg" width="24" height="24" fill="currentColor" viewBox="0 0 24 24">
                        <path fill-rule="evenodd" d="M8.586 2.586A2 2 0 0 1 10 2h4a2 2 0 0 1 2 2v2h3a1 1 0 1 1 0 2v12a2 2 0 0 1-2 2H7a2 2 0 0 1-2-2V8a1 1 0 0 1 0-2h3V4a2 2 0 0 1 .586-1.414ZM10 6h4V4h-4v2Zm1 4a1 1 0 1 0-2 0v8a1 1 0 1 0 2 0v-8Zm4 0a1 1 0 1 0-2 0v8a1 1 0 1 0 2 0v-8Z" clip-rule="evenodd" />
                    </svg>
                    <span class="hidden md:inline font-medium">&nbsp; Delete</span>
                </button>
            </div>
        </div>

        <div id="popup-modal-2" tabindex="-1" class="hidden overflow-y-auto overflow-x-hidden fixed top-0 right-0 left-0 z-50 justify-center items-center w-full md:inset-0 h-[calc(100%-1rem)] max-h-full">
            <div class="relative p-4 w-full max-w-md max-h-full">
                <div class="relative bg-white rounded-lg shadow dark:bg-gray-700">
                    <button type="button" class="absolute top-3 end-2.5 text-gray-400 bg-transparent hover:bg-gray-200 hover:text-gray-900 rounded-lg text-sm w-8 h-8 ms-auto inline-flex justify-center items-center" data-modal-hide="popup-modal-2">
                        <svg class="w-3 h-3" aria-hidden="true" xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 14 14">
                            <path stroke="currentColor" stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="m1 1 6 6m0 0 6 6M7 7l6-6M7 7l-6 6" />
                        </svg>
                        <span class="sr-only">Close modal</span>
                    </button>
                    <form id="deleteForm" asp-action="Delete" asp-controller="DiabetesRisk" asp-route-id="@Model.DiabetesRisk.Id" asp-route-householdNo="@Model.HouseholdNo" asp-route-requestUrl="@Model.RequestUrl">
                        <div class="p-4 md:p-5 text-center">
                            <svg class="mx-auto mb-4 text-gray-400 w-12 h-12 dark:text-gray-200" aria-hidden="true" xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 20 20">
                                <path stroke="currentColor" stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 11V6m0 8h.01M19 10a9 9 0 1 1-18 0 9 9 0 0 1 18 0Z" />
                            </svg>
                            <h3 class="mb-5 text-lg font-normal text-gray-500">Are you sure you want to delete this Type 2 Diabetes Risk Assessment Form?</h3>
                            <button data-modal-hide="popup-modal-2" type="button" class="py-2.5 px-5 ms-3 text-sm font-medium text-gray-900 focus:outline-none bg-white rounded-lg border border-gray-200 hover:bg-gray-100 hover:text-blue-700 focus:z-10 focus:ring-4 focus:ring-gray-100 dark:focus:ring-gray-700 dark:bg-gray-800 dark:text-gray-400 dark:border-gray-600 dark:hover:text-white dark:hover:bg-gray-700">No, cancel</button>
                            <button data-modal-hide="popup-modal-2" type="submit" class="text-white bg-red-600 hover:bg-red-800 focus:ring-4 focus:outline-none focus:ring-red-300 dark:focus:ring-red-800 font-medium rounded-lg text-sm inline-flex items-center px-5 py-2.5 text-center">
                                Yes, I'm sure
                            </button>
                        </div>
                    </form>
                </div>
            </div>
        </div>

        <div>
            <hr class="mb-2" />
            <dl class="grid grid-cols-1 md:grid-cols-2 gap-y-4 gap-x-8 py-5 text-sm">
                <div class="flex items-center">
                    <dt class="text-gray-700 font-semibold mr-10 flex-shrink-0 w-44">Assessment for</dt>
                    <dd class="text-gray-900">@Model.DiabetesRisk.HouseholdMember.FormattedFullName</dd>
                </div>

                <div class="flex items-center ">
                    <dt class="text-gray-800 font-semibold mr-10 flex-shrink-0 w-44">How often do you eat vegetables, fruits, or berries?</dt>
                    <dd class="text-gray-900">@(Model.DiabetesRisk.EatsVegetablesEveryDay.Value ? "0 pts - Every day" : "1 pt - Not every day")</dd>
                </div>

                <div class="flex items-center ">
                    <dt class="text-gray-800 font-semibold mr-10 flex-shrink-0 w-44">Age</dt>
                    <dd class="text-gray-900">
                        @(
                            (int)Model.DiabetesRisk.AgeRiskPoints.Value switch
                            {
                                0 => "0 pts - Under 45 years",
                                2 => "2 pts - 45-54 years",
                                3 => "3 pts - 55-64 years",
                                4 => "4 pts - Over 64 years",
                                _ => "n/a"
                            }
                            )
                    </dd>
                </div>

                <div class="flex items-center ">
                    <dt class="text-gray-800 font-semibold mr-10 flex-shrink-0 w-44">Do you regularly take medication for high blood pressure?</dt>
                    <dd class="text-gray-900">@(Model.DiabetesRisk.TakingHighBloodPressureMedication.Value ? "2 pts - Yes" : "0 pts - No")</dd>
                </div>

                <div class="flex items-center ">
                    <dt class="text-gray-800 font-semibold mr-10 flex-shrink-0 w-44">Body-Mass Index</dt>
                    <dd class="text-gray-900">
                        @(
                            (int)Model.DiabetesRisk.BmiRiskPoints.Value switch
                            {
                                0 => "0 pts - Lower than 25 kg/m²",
                                1 => "1 pts - 25-30 kg/m²",
                                3 => "3 pts - Higher than 30 kg/m²",
                                _ => "n/a"
                            }
                            )
                    </dd>
                </div>

                <div class="flex items-center ">
                    <dt class="text-gray-800 font-semibold mr-10 flex-shrink-0 w-44">Have you ever been found to have high blood glucose?</dt>
                    <dd class="text-gray-900">@(Model.DiabetesRisk.HasHighBloodGlucose.Value ? "5 pts - Yes" : "0 pts - No")</dd>
                </div>

                <div class="flex items-center ">
                    <dt class="text-gray-800 font-semibold mr-10 flex-shrink-0 w-44">Waist Circumference</dt>
                    <dd class="text-gray-900">
                        @(
                            Model.DiabetesRisk.HouseholdMember.Sex == 'M' ?
                            (int)Model.DiabetesRisk.WaistCircumferenceMenRiskPoints.Value switch
                            {
                                0 => "0 pts - Lower than 94 cm",
                                3 => "3 pts - 94-102 cm",
                                4 => "4 pts - More than 102 cm",
                                _ => "n/a"
                            } :
                            (int)Model.DiabetesRisk.WaistCircumferenceWomenRiskPoints.Value switch
                            {
                                0 => "0 pts - Lower than 80 cm",
                                3 => "3 pts - 80-88 cm",
                                4 => "4 pts - More than 88 cm",
                                _ => "n/a"
                            }
                        )
                    </dd>
                </div>

                <div class="flex items-center ">
                    <dt class="text-gray-800 font-semibold mr-10 flex-shrink-0 w-44">Does anyone in your immediate or extended family have diabetes?</dt>
                    <dd class="text-gray-900">
                        @(
                            (int)Model.DiabetesRisk.FamilyWithDiabetesRiskPoints.Value switch
                            {
                                0 => "0 pts - No",
                                3 => "3 pts - Yes; grandparent, aunt, uncle or first cousin",
                                5 => "5 pts - Yes; parent, brother, sister or own child",
                                _ => "n/a"
                            }
                        )
                    </dd>
                </div>

                <div class="flex items-center ">
                    <dt class="text-gray-800 font-semibold mr-10 flex-shrink-0 w-44">Do you usually have daily at least 30 minutes of physical activity?</dt>
                    <dd class="text-gray-900">@(Model.DiabetesRisk.IsPhysicallyActive.Value ? "0 pts - Yes" : "2 pts - No")</dd>
                </div>
                

                <div class="flex items-center ">
                    <dt class="text-gray-800 font-semibold mr-10 flex-shrink-0 w-44">Total risk score</dt>
                    <dd class="text-gray-900">@Model.DiabetesRisk.TotalScore pts - @Model.DiabetesRisk.Risk</dd>
                </div>
            </dl>
        </div>
    </div>

    <div class="flex justify-end mt-8">
        <a asp-action="Index" asp-route-householdNo="@Model.HouseholdNo" class="focus:outline-none text-white bg-red-400 hover:bg-red-450 font-medium rounded-lg text-sm px-5 py-2.5 me-2 mb-2">Back to List</a>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("Prints/_PrintDialogWithId");
    }
}