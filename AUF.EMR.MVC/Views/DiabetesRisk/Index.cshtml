@model DiabetesRiskVM

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
    <a asp-action="Create" asp-route-householdNo="@Model.HouseholdNo">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.DiabetesRisks[0].HouseholdMember)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.DiabetesRisks[0].IsPhysicallyActive)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.DiabetesRisks[0].EatsVegetablesEveryDay)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.DiabetesRisks[0].TakingHighBloodPressureMedication)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.DiabetesRisks[0].HasHighBloodGlucose)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.DiabetesRisks[0].FamilyWithDiabetesRiskPoints)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.DiabetesRisks[0].Status)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.DiabetesRisks[0].DateCreated)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.DiabetesRisks[0].LastModified)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.DiabetesRisks[0].ModifiedById)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model.DiabetesRisks) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.HouseholdMember.FormattedFullName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.IsPhysicallyActive)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.EatsVegetablesEveryDay)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.TakingHighBloodPressureMedication)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.HasHighBloodGlucose)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.FamilyWithDiabetesRiskPoints)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Status)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.DateCreated)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.LastModified)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ModifiedById)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.Id">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.Id">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.Id">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
