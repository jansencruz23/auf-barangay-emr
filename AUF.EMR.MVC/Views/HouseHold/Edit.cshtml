@model CreateHouseholdProfileVM

@{
    Layout = "Layouts/_HouseholdLayout";
    ViewData["Title"] = "Edit";
}

<section class="flex justify-center pt-16">
    <div class="w-2/3 my-12">
        <form asp-action="Edit">
            <h1 class="text-xl md:text-3xl font-bold text-gray-800 mb-4">Edit Household</h1>
            <div class="grid grid-cols-1 md:grid-cols-2 gap-12">
                 <div asp-validation-summary="ModelOnly" class="block mb-2 text-sm text-red-700"></div>
                    <!-- Left Column -->
                    <div>
                        <div class="mb-4">
                            <label asp-for="Household.HouseholdNo" class="block mb-2 text-sm font-medium text-gray-700">Household No.</label>
                        <input asp-for="Household.HouseholdNo" class="bg-gray-50 border border-gray-300 text-gray-900 text-sm rounded-lg focus:ring-blue-500 focus:border-blue-500 block w-2/4 p-2.5" />
                            <span asp-validation-for="Household.HouseholdNo" class="block mb-2 text-sm text-red-700"></span>
                        </div>
                        <div class="mb-2 mt-8">
                            <h6 class="text-md font-bold text-gray-800">Respondent personal info</h6>
                        </div>
                        <div class="mb-4">
                            <label asp-for="Household.FirstName" class="block mb-2 text-sm font-medium text-gray-700">First Name</label>
                            <input asp-for="Household.FirstName" class="bg-gray-50 border border-gray-300 text-gray-900 text-sm rounded-lg focus:ring-blue-500 focus:border-blue-500 block w-full md:w-4/5 p-2.5" />
                            <span asp-validation-for="Household.FirstName" class="block mb-2 text-sm text-red-700"></span>
                        </div>
                        <div class="mb-4">
                            <label asp-for="Household.MotherMaidenName" class="block mb-2 text-sm font-medium text-gray-700">Mother's Maiden Name</label>
                            <input asp-for="Household.MotherMaidenName" class="bg-gray-50 border border-gray-300 text-gray-900 text-sm rounded-lg focus:ring-blue-500 focus:border-blue-500 block w-full md:w-4/5 p-2.5" />
                            <span asp-validation-for="Household.MotherMaidenName" class="block mb-2 text-sm text-red-700"></span>
                        </div>
                        <div class="mb-4">
                            <label asp-for="Household.LastName" class="block mb-2 text-sm font-medium text-gray-700">Last Name</label>
                            <input asp-for="Household.LastName" class="bg-gray-50 border border-gray-300 text-gray-900 text-sm rounded-lg focus:ring-blue-500 focus:border-blue-500 block w-full md:w-4/5 p-2.5" />
                            <span asp-validation-for="Household.LastName" class="block mb-2 text-sm text-red-700"></span>
                        </div>
                        <div class="mb-4">
                            <label asp-for="Household.ContactNo" class="block mb-2 text-sm font-medium text-gray-700">Contact Number</label>
                        <input asp-for="Household.ContactNo" class="bg-gray-50 border border-gray-300 text-gray-900 text-sm rounded-lg focus:ring-blue-500 focus:border-blue-500 block w-2/4 p-2.5" />
                            <span asp-validation-for="Household.ContactNo" class="block mb-2 text-sm text-red-700"></span>
                        </div>
                        <div class="mb-4">
                            <label asp-for="Household.HouseNoAndStreet" class="block mb-2 text-sm font-medium text-gray-700">House No. & Street</label>
                            <input asp-for="Household.HouseNoAndStreet" class="bg-gray-50 border border-gray-300 text-gray-900 text-sm rounded-lg focus:ring-blue-500 focus:border-blue-500 block w-full md:w-4/5 p-2.5" />
                            <span asp-validation-for="Household.HouseNoAndStreet" class="block mb-2 text-sm text-red-700"></span>
                        </div>
                        <div class="mb-4">
                            <label asp-for="Household.Barangay" class="block mb-2 text-sm font-medium text-gray-700">Barangay</label>
                            <input asp-for="Household.Barangay" class="bg-gray-50 border border-gray-300 text-gray-900 text-sm rounded-lg focus:ring-blue-500 focus:border-blue-500 block w-full md:w-4/5 p-2.5" />
                            <span asp-validation-for="Household.Barangay" class="block mb-2 text-sm text-red-700"></span>
                        </div>
                        <div class="mb-4">
                            <label asp-for="Household.City" class="block mb-2 text-sm font-medium text-gray-700">City</label>
                            <input asp-for="Household.City" class="bg-gray-50 border border-gray-300 text-gray-900 text-sm rounded-lg focus:ring-blue-500 focus:border-blue-500 block w-full md:w-4/5 p-2.5" />
                            <span asp-validation-for="Household.City" class="block mb-2 text-sm text-red-700"></span>
                        </div>
                        <div class="mb-4">
                            <label asp-for="Household.Province" class="block mb-2 text-sm font-medium text-gray-700">Province</label>
                            <input asp-for="Household.Province" class="bg-gray-50 border border-gray-300 text-gray-900 text-sm rounded-lg focus:ring-blue-500 focus:border-blue-500 block w-full md:w-4/5 p-2.5" />
                            <span asp-validation-for="Household.Province" class="block mb-2 text-sm text-red-700"></span>
                        </div>
                    </div>
                    <!-- Right Column-->
                    <div>
                         <div class="mb-4">
                            <label asp-for="Household.FirstQtrVisit" class="block mb-2 text-sm font-medium text-gray-700"></label>
                            <input asp-for="Household.FirstQtrVisit" class="bg-gray-50 border border-gray-300 text-gray-900 text-sm rounded-lg focus:ring-blue-500 focus:border-blue-500 block w-full md:w-4/5 p-2.5" />
                            <span asp-validation-for="Household.FirstQtrVisit" class="block mb-2 text-sm text-red-700"></span>
                        </div>
                        <div class="mb-4">
                            <label asp-for="Household.SecondQtrVisit" class="block mb-2 text-sm font-medium text-gray-700"></label>
                            <input asp-for="Household.SecondQtrVisit" class="bg-gray-50 border border-gray-300 text-gray-900 text-sm rounded-lg focus:ring-blue-500 focus:border-blue-500 block w-full md:w-4/5 p-2.5" />
                            <span asp-validation-for="Household.SecondQtrVisit" class="block mb-2 text-sm text-red-700"></span>
                        </div>
                        <div class="mb-4">
                            <label asp-for="Household.ThirdQtrVisit" class="block mb-2 text-sm font-medium text-gray-700"></label>
                            <input asp-for="Household.ThirdQtrVisit" class="bg-gray-50 border border-gray-300 text-gray-900 text-sm rounded-lg focus:ring-blue-500 focus:border-blue-500 block w-full md:w-4/5 p-2.5" />
                            <span asp-validation-for="Household.ThirdQtrVisit" class="block mb-2 text-sm text-red-700"></span>
                        </div>
                        <div class="mb-4">
                            <label asp-for="Household.FourthQtrVisit" class="block mb-2 text-sm font-medium text-gray-700"></label>
                            <input asp-for="Household.FourthQtrVisit" class="bg-gray-50 border border-gray-300 text-gray-900 text-sm rounded-lg focus:ring-blue-500 focus:border-blue-500 block w-full md:w-4/5 p-2.5" />
                            <span asp-validation-for="Household.FourthQtrVisit" class="block mb-2 text-sm text-red-700"></span>
                        </div>
                        <div class="mb-4">
                            <label class="block mb-2 text-sm font-medium text-gray-700"></label>
                            <div class="flex items-center me-4">
                                <input class="w-4 h-4 text-blue-600 bg-gray-50 border-gray-300 focus:ring-blue-500" type="radio" asp-for="Household.IsNHTS" value="true" />
                                <label class="ms-2 text-sm font-medium text-gray-900">NHTS</label>
                            </div>
                            <div class="flex items-center me-4">
                                <input class="w-4 h-4 text-blue-600 bg-gray-50 border-gray-300 focus:ring-blue-500" type="radio" asp-for="Household.IsNHTS" value="false" />
                                <label class="ms-2 text-sm font-medium text-gray-900">Non NHTS</label>
                            </div>
                        </div>
                        <div class="mb-4">
                            <label class="flex items-center me-4">
                                    <input class="w-4 h-4 text-blue-600 bg-gray-50 border-gray-300 focus:ring-blue-500" asp-for="Household.IsIP" /> @Html.DisplayNameFor(model => model.Household.IsIP)
                            </label>
                        </div>
                        <div class="mb-4"
                            <label class="flex items-center me-4">
                                <input class="w-4 h-4 text-blue-600 bg-gray-50 border-gray-300 focus:ring-blue-500" asp-for="Household.IsHeadPhilhealthMember" /> @Html.DisplayNameFor(model => model.Household.IsHeadPhilhealthMember)
                            </label>
                        </div>
                        <div class="mb-4">
                            <label asp-for="Household.PhilhealthNo" class="block mb-2 text-sm font-medium text-gray-700"></label>
                            <input asp-for="Household.PhilhealthNo" class="bg-gray-50 border border-gray-300 text-gray-900 text-sm rounded-lg focus:ring-blue-500 focus:border-blue-500 block w-full md:w-4/5 p-2.5" />
                            <span asp-validation-for="Household.PhilhealthNo" class="block mb-2 text-sm text-red-700"></span>
                        </div>
                        <div class="mb-4">
                            <label asp-for="Household.Category" class="block mb-2 text-sm font-medium text-gray-700"></label>
                            <input asp-for="Household.Category" class="bg-gray-50 border border-gray-300 text-gray-900 text-sm rounded-lg focus:ring-blue-500 focus:border-blue-500 block w-full md:w-4/5 p-2.5" />
                            <span asp-validation-for="Household.Category" class="block mb-2 text-sm text-red-700"></span>
                        </div>
                    </div>
                    <input type="hidden" asp-for="Household.Id" />
                    <input type="hidden" asp-for="Household.DateCreated" />
            </div>
            <div class="flex justify-end">
                <a asp-action="Index" class="focus:outline-none text-white bg-red-400 hover:bg-red-500 font-medium rounded-lg text-sm px-5 py-2.5 me-2 mb-2 focus:ring-4 focus:ring-red-200">Back</a>
                <button type="submit" class="focus:outline-none text-white bg-primary-50 font-medium rounded-lg text-sm px-5 py-2.5 me-2 mb-2 focus:ring-4 focus:ring-green-200">Save</button>
            </div>
        </form>
   </div>

</section>

<div>
    <a asp-action="HouseholdProfile" asp-route-householdNo="@Model.Household.HouseholdNo">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
