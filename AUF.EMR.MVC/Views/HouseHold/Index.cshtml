@model IEnumerable<Household>

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<form asp-action="Index">
    <div class="input-group md-form form-sm form-2 pl-0">
        <input name="query" class="form-control my-0 py-1" type="text" placeholder="Search House Hold No. or Name" />
        <div class="input-group-append">
            <span class="input-group-text list-group-numbered lighten-3" id="search-text">
                <i class="fas fa-search text-grey" aria-hidden="true"></i>
            </span>
        </div>
    </div>
</form>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.HouseholdNo)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.LastName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.FirstName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.MotherMaidenName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.HouseNoAndStreet)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Barangay)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.City)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Province)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ContactNo)
            </th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.HouseholdNo)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.LastName)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.FirstName)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.MotherMaidenName)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.HouseNoAndStreet)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Barangay)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.City)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Province)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.ContactNo)
                </td>
                <td>
                    <a class="btn btn-primary" asp-action="HouseholdProfile" asp-route-householdNo="@item.HouseholdNo">View Household</a>
                </td>
            </tr>
        }
    </tbody>
</table>

@section scripts {
    <script>
        $(function () {
            $("#search-text").click(function () {
                $("Form").submit();
            });
        });
    </script>
}