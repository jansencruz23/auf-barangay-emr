@model ApplicationUser

@{
    Layout = "Layouts/_FormLayout";
}

<div class="bg-white w-full flex flex-col gap-5 px-3 md:px-16 lg:px-28 md:flex-row text-[#161931] rounded-lg">
    <aside class="hidden py-4 md:w-1/3 lg:w-1/4 md:block">
        <div class="sticky flex flex-col gap-2 p-4 text-sm border-r border-black-100 top-12">

            <h2 class="pl-3 mb-4 text-2xl font-semibold">Profile</h2>

            <a href="#" class="flex items-center px-3 py-2.5 font-bold bg-white border rounded-md">
                Account Settings
            </a>
        </div>
    </aside>
    <main class="w-full min-h-screen py-1 md:w-2/3 lg:w-3/4 rounded">
        <div class="p-2 md:p-4">
            <div class="w-full px-6 pb-8 mt-8 sm:max-w-xl sm:rounded-lg">
                <div class="grid max-w-2xl mx-auto mt-8 rounded">
                    <div class="flex flex-col items-center space-y-5 sm:flex-row sm:space-y-0">

                        <img class="object-cover w-40 h-40 p-1 rounded-full ring-2 ring-gray-200"
                             src="data:image/png;base64,@Model.Picture"
                            alt="Bordered avatar">
                        <div class="flex flex-col space-y-5 sm:ml-8">
                            <button type="button"
                                    class="focus:outline-none text-white bg-primary-50 font-medium rounded-lg text-sm px-5 py-2.5 me-2 text-center">
                                Change profile picture
                            </button>
                            <button type="button"
                                class="focus:outline-none text-white bg-red-400 hover:bg-red-450 font-medium rounded-lg text-sm px-5 py-2.5 me-2 mb-2">
                                Delete profile picture
                            </button>
                        </div>
                    </div>

                    <div class="items-center mt-8 sm:mt-14 text-[#202142]">
                        <div
                            class="flex flex-col items-center w-full mb-2 space-x-0 space-y-2 sm:flex-row sm:space-x-4 sm:space-y-0 sm:mb-6">
                            <div class="w-full">
                                <label for="first_name"
                                    class="block mb-2 text-sm font-medium text-black-900 dark:text-white">First Name</label>
                                <input type="text" id="first_name"
                                    class="form-control bg-gray-50 border border-gray-300 text-gray-900 text-sm rounded-lg focus:ring-blue-500 focus:border-blue-500 block w-full p-2.5"
                                    placeholder="First Name" value="@Model.FirstName" required>
                            </div>
                            <div class="w-full">
                                <label for="middle_name"
                                       class="block mb-2 text-sm font-medium text-black-900 dark:text-white">Middle Name</label>
                                <input type="text" id="last_name"
                                       class="form-control bg-gray-50 border border-gray-300 text-gray-900 text-sm rounded-lg focus:ring-blue-500 focus:border-blue-500 block w-full p-2.5 "
                                       placeholder="Middle Name" value="@Model.MiddleName" required>
                            </div>
                            <div class="w-full">
                                <label for="last_name"
                                    class="block mb-2 text-sm font-medium text-black-900 dark:text-white">Last Name</label>
                                <input type="text" id="last_name"
                                    class="form-control bg-gray-50 border border-gray-300 text-gray-900 text-sm rounded-lg focus:ring-blue-500 focus:border-blue-500 block w-full p-2.5 "
                                    placeholder="Last Name" value="@Model.LastName" required>
                            </div>
                        </div>
                        <div class="flex flex-col items-center w-full mb-2 space-x-0 space-y-2 sm:flex-row sm:space-x-4 sm:space-y-0 sm:mb-6 mt-6">
                            <div class="w-full">
                                <label for="contact_number"
                                       class="block mb-2 text-sm font-medium text-black-900 dark:text-white">Contact No.</label>
                                <input type="text" id="contact_number"
                                       class="form-control bg-gray-50 border border-gray-300 text-gray-900 text-sm rounded-lg focus:ring-blue-500 focus:border-blue-500 block w-full p-2.5 "
                                       placeholder="Contact No." value="@Model.ContactNo" required>
                            </div>
                            <div class="w-full">
                                <label for="birth_date"
                                       class="block mb-2 text-sm font-medium text-black-900 dark:text-white">Date of Birth</label>
                                <input type="text" id="birth_date"
                                       class="form-control bg-gray-50 border border-gray-300 text-gray-900 text-sm rounded-lg focus:ring-blue-500 focus:border-blue-500 block w-full p-2.5 "
                                       placeholder="Contact No." value="@Model.Birthday" required>
                            </div>
                        </div>

                        <div class="mb-2 sm:mb-6 mt-6">
                            <label for="address"
                                class="block mb-2 text-sm font-medium text-black-900 dark:text-white">
                                Address</label>
                            <input type="text" id="address"
                                class="form-control bg-gray-50 border border-gray-300 text-gray-900 text-sm rounded-lg focus:ring-blue-500 focus:border-blue-500 block w-full p-2.5 "
                                placeholder="Address" value="@Model.Address" required>
                        </div>

                        <div class="mb-2 sm:mb-6 mt-6">
                            <label for="profession"
                                class="block mb-2 text-sm font-medium text-black-900 dark:text-white">Position</label>
                            <input type="text" id="profession"
                                class="form-control bg-gray-50 border border-gray-300 text-gray-900 text-sm rounded-lg focus:ring-blue-500 focus:border-blue-500 block w-full p-2.5 "
                                placeholder="Position" value="@Model.Position" required>
                        </div>

                        <div class="flex flex-col items-center w-full mb-2 space-x-0 space-y-2 sm:flex-row sm:space-x-4 sm:space-y-0 sm:mb-6 mt-6">
                            <div class="w-full">
                                <label for="password"
                                       class="block mb-2 text-sm font-medium text-black-900 dark:text-white">Password</label>
                                <input type="password" id="password"
                                       class="form-control bg-gray-50 border border-gray-300 text-gray-900 text-sm rounded-lg focus:ring-blue-500 focus:border-blue-500 block w-full p-2.5 "
                                       placeholder="Password" value="@Model.PasswordHash" required>
                            </div>
                            <div class="w-full">
                                <label for="password"
                                       class="block mb-2 text-sm font-medium text-black-900 dark:text-white">Change Password</label>
                                <input type="password" id="password"
                                       class="form-control bg-gray-50 border border-gray-300 text-gray-900 text-sm rounded-lg focus:ring-blue-500 focus:border-blue-500 block w-full p-2.5 "
                                       placeholder="Password" value="@Model.PasswordHash" required>
                            </div>
                            
                        </div>
                    </div>
                    
                </div>
                <div class="flex justify-end mt-10">
                    <a asp-action="Index" asp-controller="User" class="focus:outline-none text-white bg-red-400 hover:bg-red-450 font-medium rounded-lg text-sm px-5 py-2.5 me-2 mb-2">Back</a>
                    <button type="submit"
                            class="focus:outline-none text-white bg-primary-50 font-medium rounded-lg text-sm px-5 py-2.5 me-2 mb-2 text-center">
                        Save
                    </button>
                </div>
            </div>
        </div>
    </main>
</div>