@model PregnancyTrackingListVM

@{
    ViewData["Title"] = "Index";
    Layout = "LAyouts/_PregnancyTrackingListIndex";
    ViewData["HouseholdNo"] = Model.HouseholdNo;
}

<div class="container mx-auto px-4 py-8">
    <div class="bg-white shadow-md rounded-lg p-8 mb-6">
        <div class="flex justify-between items-center mb-4">
            <div>
                <h1 class="text-xl">Details</h1>
                <h1 class="text-2xl font-bold text-gray-800 mb-4">National Safe Motherhood Program</h1>
            </div>

            <div class="flex justify-end space-x-2 mb-6">
                <button type="button" onclick="print('Print', 'PregnancyTracking', @Model.HouseholdNo)" class="flex-shrink-0 h-12 max-h-12 inline-block  bg-blue-500 hover:bg-blue-400 text-white font-medium py-2 px-4 rounded-lg transition duration-300 ease-in-out text-sm w-24">
                    <svg class="w-5 h-5 text-white inline-block mr-1" aria-hidden="true" xmlns="http://www.w3.org/2000/svg" width="24" height="24" fill="currentColor" viewBox="0 0 24 24">
                        <path fill-rule="evenodd" d="M8 3a2 2 0 0 0-2 2v3h12V5a2 2 0 0 0-2-2H8Zm-3 7a2 2 0 0 0-2 2v5a2 2 0 0 0 2 2h1v-4a1 1 0 0 1 1-1h10a1 1 0 0 1 1 1v4h1a2 2 0 0 0 2-2v-5a2 2 0 0 0-2-2H5Zm4 11a1 1 0 0 1-1-1v-4h8v4a1 1 0 0 1-1 1H9Z" clip-rule="evenodd" />
                    </svg>
                    <span class="hidden md:inline font-medium">Print</span>
                </button>
                <div class="flex justify-end">
                    <a asp-action="Edit" asp-controller="PregnancyTrackingHH" asp-route-id="@Model.PregnancyTrackingHH.Id" asp-route-householdNo="@Model.HouseholdNo" class="text-white h-12 max-h-12 bg-primary-50 mb-1 font-medium rounded-lg transition duration-300 ease-in-out text-sm px-4 py-2 hover:bg-blue-600 flex-shrink-0 inline-flex items-center space-x-2 text-white font-medium" aria-label="Add WRA">
                        <svg class="w-6 h-6 text-white" aria-hidden="true" xmlns="http://www.w3.org/2000/svg" width="24" height="24" fill="currentColor" viewBox="0 0 24 24">
                            <path fill-rule="evenodd" d="M11.32 6.176H5c-1.105 0-2 .949-2 2.118v10.588C3 20.052 3.895 21 5 21h11c1.105 0 2-.948 2-2.118v-7.75l-3.914 4.144A2.46 2.46 0 0 1 12.81 16l-2.681.568c-1.75.37-3.292-1.263-2.942-3.115l.536-2.839c.097-.512.335-.983.684-1.352l2.914-3.086Z" clip-rule="evenodd"></path>
                            <path fill-rule="evenodd" d="M19.846 4.318a2.148 2.148 0 0 0-.437-.692 2.014 2.014 0 0 0-.654-.463 1.92 1.92 0 0 0-1.544 0 2.014 2.014 0 0 0-.654.463l-.546.578 2.852 3.02.546-.579a2.14 2.14 0 0 0 .437-.692 2.244 2.244 0 0 0 0-1.635ZM17.45 8.721 14.597 5.7 9.82 10.76a.54.54 0 0 0-.137.27l-.536 2.84c-.07.37.239.696.588.622l2.682-.567a.492.492 0 0 0 .255-.145l4.778-5.06Z" clip-rule="evenodd"></path>
                        </svg><span>Update</span>
                    </a>
                </div>
            </div>
        </div>

        <div>
            <hr class="mb-2" />
            <dl class="grid grid-cols-1 md:grid-cols-2 gap-x-8 text-sm">
                <div class="flex items-center pb-2">
                    <dt class="text-gray-800 font-semibold mr-10 flex-shrink-0 w-40">Barangay</dt>
                    <dd class="text-gray-900">@Model.PregnancyTrackingHH.Barangay</dd>
                </div>

                <div class="flex items-center pb-2">
                    <dt class="text-gray-800 font-semibold mr-10 flex-shrink-0 w-40">Region</dt>
                    <dd class="text-gray-900">@Model.PregnancyTrackingHH.Region</dd>
                </div>

                <div class="flex items-center pb-2">
                    <dt class="text-gray-800 font-semibold mr-10 flex-shrink-0 w-40">Municipality</dt>
                    <dd class="text-gray-900"><p>@Model.PregnancyTrackingHH.Municipality</p></dd>
                </div>

                <div class="flex items-center pb-2">
                    <dt class="text-gray-800 font-semibold mr-10 flex-shrink-0 w-40">Province</dt>
                    <dd class="text-gray-900"><p>@Model.PregnancyTrackingHH.Province</p></dd>
                </div>

                <div class="flex items-center pb-2">
                    <dt class="text-gray-800 font-semibold mr-10 flex-shrink-0 w-40">Birthing Center</dt>
                    <dd class="text-gray-900"><p>@Model.PregnancyTrackingHH.BirthingCenter</p></dd>
                </div>

                <div class="flex items-center pb-2">
                    <dt class="text-gray-800 font-semibold mr-10 flex-shrink-0 w-40">BC Address</dt>
                    <dd class="text-gray-900"><p>@Model.PregnancyTrackingHH.BirthingCenterAddress</p></dd>
                </div>

                <div class="flex items-center pb-2">
                    <dt class="text-gray-800 font-semibold mr-10 flex-shrink-0 w-40">Referral Center</dt>
                    <dd class="text-gray-900"><p>@Model.PregnancyTrackingHH.ReferralCenter</p></dd>
                </div>

                <div class="flex items-center pb-2">
                    <dt class="text-gray-800 font-semibold mr-10 flex-shrink-0 w-40">RC Address</dt>
                    <dd class="text-gray-900"><p>@Model.PregnancyTrackingHH.ReferralCenterAddress</p></dd>
                </div>

                <div class="flex items-center pb-2">
                    <dt class="text-gray-800 font-semibold mr-10 flex-shrink-0 w-40">Health Station</dt>
                    <dd class="text-gray-900"><p>@Model.PregnancyTrackingHH.BarangayHealthStation</p></dd>
                </div>

                <div class="flex items-center pb-2">
                    <dt class="text-gray-800 font-semibold mr-10 flex-shrink-0 w-40">Rural Health Unit</dt>
                    <dd class="text-gray-900"><p>@Model.PregnancyTrackingHH.RuralHealthUnit</p></dd>
                </div>

                <div class="flex items-center pb-2">
                    <dt class="text-gray-800 font-semibold mr-10 flex-shrink-0 w-40">Health Worker</dt>
                    <dd class="text-gray-900">@Model.PregnancyTrackingHH.BHWName</dd>
                </div>

                <div class="flex items-center pb-2">
                    <dt class="text-gray-800 font-semibold mr-10 flex-shrink-0 w-40">Midwife Name</dt>
                    <dd class="text-gray-900"><p>@Model.PregnancyTrackingHH.MidwifeName</p></dd>
                </div>

                <div class="flex items-center pb-2">
                    <dt class="text-gray-800 font-semibold mr-10 flex-shrink-0 w-40">Year</dt>
                    <dd class="text-gray-900"><p>@Model.PregnancyTrackingHH.Year</p></dd>
                </div>
            </dl>
            <hr class="mb-3" />
        </div>
    </div>

    <div class="bg-white shadow-md rounded-lg p-8">
        <div class="flex justify-between mb-4">
            <div>
                <h1 class="text-xl">List of</h1>
                <h1 class="text-2xl font-bold text-gray-800 mb-4">Pregnancy Tracking</h1>
            </div>
            <a asp-action="Create" asp-route-householdNo="@Model.HouseholdNo" class="px-5 py-2.5 max-h-12 text-sm font-medium text-center inline-flex items-center text-white bg-primary-50 rounded-lg focus:ring-4 focus:outline-none focus:ring-green-200" aria-label="Add WRA">
                <svg class="w-6 h-6 text-white mr-2" aria-hidden="true" xmlns="http://www.w3.org/2000/svg" width="24" height="24" fill="currentColor" viewBox="0 0 24 24">
                    <path fill-rule="evenodd" d="M5 4a2 2 0 0 0-2 2v1h10.968l-1.9-2.28A2 2 0 0 0 10.532 4H5ZM3 19V9h18v10a2 2 0 0 1-2 2H5a2 2 0 0 1-2-2Zm9-8.5a1 1 0 0 1 1 1V13h1.5a1 1 0 1 1 0 2H13v1.5a1 1 0 1 1-2 0V15H9.5a1 1 0 1 1 0-2H11v-1.5a1 1 0 0 1 1-1Z" clip-rule="evenodd" />
                </svg>
                Add Pregnancy Tracking
            </a>
        </div>
        <hr class="mb-4" />
        <div class="overflow-x-auto">
            <table class="table-auto w-full">
                <thead>
                    <tr class="bg-gray-200 text-sm">
                        <th class="px-4 py-2 text-left">
                            Name
                        </th>
                        <th class="px-4 py-2 text-left">
                            Age
                        </th>
                        <th class="px-4 py-2 text-left">
                            Gravidity
                        </th>
                        <th class="px-4 py-2 text-left">
                            Parity
                        </th>
                        <th class="px-4 py-2 text-left">
                            Expected Date Of Delivery
                        </th>
                        <th class="px-4 py-2 text-left">
                            1st Tri Check-Up
                        </th>
                        <th class="px-4 py-2 text-left">
                            2nd Tri Check-Up
                        </th>
                        <th class="px-4 py-2 text-left">
                            3rd Tri Check-Up
                        </th>
                        <th class="px-4 py-2 text-left">
                            Pregnancy Outcome
                        </th>
                        <th class="px-4 py-2 text-left">
                            Actions
                        </th>
                    </tr>
                </thead>

                <tbody>
                    @foreach (var item in Model.PregnancyTrackingList)
                    {
                        <tr class="text-sm hover-table-content transition duration-300 ease-in-out border-b border-gray-100">
                            <td class="px-4 py-2">
                                @Html.DisplayFor(modelItem => item.HouseholdMember.FormattedFullName)
                            </td>
                            <td class="px-4 py-2">
                                @Html.DisplayFor(modelItem => item.Age)
                            </td>
                            <td class="px-4 py-2">
                                @Html.DisplayFor(modelItem => item.Gravidity)
                            </td>
                            <td class="px-4 py-2">
                                @Html.DisplayFor(modelItem => item.Parity)
                            </td>
                            <td class="px-4 py-2">
                                @Html.DisplayFor(modelItem => item.ExpectedDateOfDelivery)
                            </td>
                            <td class="px-4 py-2">
                                @Html.DisplayFor(modelItem => item.FirstAntenatalCheckUp)
                            </td>
                            <td class="px-4 py-2">
                                @Html.DisplayFor(modelItem => item.SecondAntenatalCheckUp)
                            </td>
                            <td class="px-4 py-2">
                                @Html.DisplayFor(modelItem => item.ThirdAntenatalCheckUp)
                            </td>
                            <td class="px-4 py-2">
                                @Html.DisplayFor(modelItem => item.PregnancyOutcome)
                            </td>
                            <td class="px-4 py-2 inline-flex items-center text-center text-lg">
                                <a asp-action="Details" asp-route-householdNo="@Model.HouseholdNo" asp-route-id="@item.Id" class="text-green-400 hover:text-green-500 mr-2"><i class="fas fa-eye"></i></a>
                                <a asp-action="Edit" asp-route-id="@item.Id" class="text-yellow-300 hover:text-yellow-400 mr-2"><i class="fas fa-edit"></i></a>
                                <button data-modal-target="popup-modal-2" data-modal-toggle="popup-modal-2" data-member-id="@item.Id" class="delete-btn text-red-400 hover:text-red-500 mr-2"><i class="fas fa-trash"></i></button>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>

<div id="popup-modal-2" tabindex="-1" class="hidden overflow-y-auto overflow-x-hidden fixed top-0 right-0 left-0 z-50 justify-center items-center w-full md:inset-0 h-[calc(100%-1rem)] max-h-full">
    <div class="relative p-4 w-full max-w-md max-h-full">
        <div class="relative bg-white rounded-lg shadow dark:bg-gray-700">
            <button type="button" class="absolute top-3 end-2.5 text-gray-400 bg-transparent hover:bg-gray-200 hover:text-gray-900 rounded-lg text-sm w-8 h-8 ms-auto inline-flex justify-center items-center" data-modal-hide="popup-modal-2">
                <svg class="w-3 h-3" aria-hidden="true" xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 14 14">
                    <path stroke="currentColor" stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="m1 1 6 6m0 0 6 6M7 7l6-6M7 7l-6 6" />
                </svg>
                <span class="sr-only">Close modal</span>
            </button>
            <form id="deleteForm" asp-action="Delete" asp-controller="PregnancyTracking" asp-route-householdNo="@Model.HouseholdNo" asp-route-requestUrl="@Model.RequestUrl">
                <div class="p-4 md:p-5 text-center">
                    <svg class="mx-auto mb-4 text-gray-400 w-12 h-12 dark:text-gray-200" aria-hidden="true" xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 20 20">
                        <path stroke="currentColor" stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 11V6m0 8h.01M19 10a9 9 0 1 1-18 0 9 9 0 0 1 18 0Z" />
                    </svg>
                    <h3 class="mb-5 text-lg font-normal text-gray-500">Are you sure you want to delete this record?</h3>
                    <button data-modal-hide="popup-modal-2" type="button" class="py-2.5 px-5 ms-3 text-sm font-medium text-gray-900 focus:outline-none bg-white rounded-lg border border-gray-200 hover:bg-gray-100 hover:text-blue-700 focus:z-10 focus:ring-4 focus:ring-gray-100 dark:focus:ring-gray-700 dark:bg-gray-800 dark:text-gray-400 dark:border-gray-600 dark:hover:text-white dark:hover:bg-gray-700">No, cancel</button>
                    <button data-modal-hide="popup-modal-2" type="submit" class="text-white bg-red-600 hover:bg-red-800 focus:ring-4 focus:outline-none focus:ring-red-300 dark:focus:ring-red-800 font-medium rounded-lg text-sm inline-flex items-center px-5 py-2.5 text-center">
                        Yes, I'm sure
                    </button>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("Prints/_PrintDialog");
    }
}