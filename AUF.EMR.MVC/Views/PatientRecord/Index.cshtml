@model PatientRecordVM

@{
    Layout = "Layouts/_FormLayout";
    ViewData["Title"] = "Index";
    ViewData["HouseholdNo"] = Model.HouseholdNo;
}

<div class="container mx-auto px-4 py-8">
    <div class="flex justify-between items-center mb-4">
        <div>
            <h1 class="text-xl">Details</h1>
            <h1 class="text-2xl font-bold text-gray-800 mb-4">Patient Record</h1>
        </div>

        <div class="flex justify-end space-x-2 mb-6">
            <a asp-action="Create" asp-route-householdNo="@Model.HouseholdNo" class="text-white bg-primary-50 font-medium rounded-lg transition duration-300 ease-in-out text-sm px-4 py-2 hover:bg-green-300 flex-shrink-0 inline-block  text-white font-medium" aria-label="Add WRA">
                <svg class="h-5 w-5 inline-block mr-1" fill="none" stroke="currentColor" viewBox="0 0 24 24" xmlns="http://www.w3.org/2000/svg">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 6v6m0 0v6m0-6h6m-6 0H6"></path>
                </svg>
                Add Patient Record
            </a>
        </div>
    </div>

    <div class="bg-white shadow-md rounded-lg p-8">
        <div style="overflow:auto;">
            <table class="table-auto w-full">
                <thead>
                    <tr class="bg-gray-200 text-sm">
                        <th class="px-4 py-2 text-left">Patient</th>
                        <th class="px-4 py-2 text-left">Birthplace</th>
                        <th class="px-4 py-2 text-left">Mother's Name</th>
                        @*<th class="px-4 py-2 text-left">MotherAge</th>*@
                        <th class="px-4 py-2 text-left">Mother's Birthday</th>
                        <th class="px-4 py-2 text-left">Father's Name</th>
                        @*<th class="px-4 py-2 text-left">FatherAge</th>*@
                        <th class="px-4 py-2 text-left">Father's Birthday</th>
                        <th class="px-4 py-2 text-left">Contact Number</th>
                        <th class="px-4 py-2 text-left">Type Of Delivery</th>
                        <th class="px-4 py-2 text-left">Attended</th>
                        <th class="px-4 py-2 text-left"></th>

                    </tr>
                </thead>
                <!--Table Contents-->
                <tbody>
                    @foreach (var item in Model.PatientRecords)
                    {
                        //<tr  @*style="background-color: #ffffff; this.style.color='#000000'" onmouseover="this.style.backgroundColor='#808080'; this.style.color='#ffffff'" onmouseout="this.style.backgroundColor='#ffffff'; this.style.color='#000000'"*@>
                        <tr class="text-sm hover-household transition duration-300 ease-in-out">
                            <td class="border-b border-gray-100 px-4 py-2 text-left">
                                @Html.DisplayFor(modelItem => item.Patient.FullName)
                            </td>
                            <td class="border-b border-gray-100 px-4 py-2 text-left">
                                @Html.DisplayFor(modelItem => item.BirthPlace)
                            </td>
                            <td class="border-b border-gray-100 px-4 py-2 text-left">
                                @Html.DisplayFor(modelItem => item.MotherName)
                            </td>
                            @*<td style="text-align: center">
                        @Html.DisplayFor(modelItem => item.MotherAge)
                        </td>*@
                            <td class="border-b border-gray-100 px-4 py-2 text-left">
                                @Html.DisplayFor(modelItem => item.MotherBirthday)
                            </td>
                            <td class="border-b border-gray-100 px-4 py-2 text-left">
                                @Html.DisplayFor(modelItem => item.FatherName)
                            </td>
                            @*<td style="text-align: center">
                        @Html.DisplayFor(modelItem => item.FatherAge)
                        </td>*@
                            <td class="border-b border-gray-100 px-4 py-2 text-left">
                                @Html.DisplayFor(modelItem => item.FatherBirthday)
                            </td>
                            <td class="border-b border-gray-100 px-4 py-2 text-left">
                                @Html.DisplayFor(modelItem => item.ContactNumber)
                            </td>
                            <td class="border-b border-gray-100 px-4 py-2 text-left">
                                @Html.DisplayFor(modelItem => item.TypeOfDelivery)
                            </td>
                            <td class="border-b border-gray-100 px-4 py-2 text-left">
                                @Html.DisplayFor(modelItem => item.Attended)
                            </td>

                            <!--Action Button-->
                            <td class="border-b border-gray-100 px-4 py-2 inline-flex items-center text-center text-lg">
                                <a asp-action="Details" asp-route-id="@item.Id" asp-route-householdNo="@Model.HouseholdNo" class="text-green-400 hover:text-green-500 mr-2"><i class="fas fa-eye"></i></a>
                                <button type="button" onclick="print('Print', 'PatientRecord', @Model.HouseholdNo, @item.Id, @item.PatientId)" class="text-blue-400 hover:text-blue-600 mr-2"><i class="fa-solid fa-print"></i></button>
                                <button data-modal-target="popup-modal-2" data-modal-toggle="popup-modal-2" data-member-id="@item.Id" class="delete-btn text-red-400 hover:text-red-500 mr-2"><i class="fas fa-trash"></i></button>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>


<div id="popup-modal-2" tabindex="-1" class="hidden overflow-y-auto overflow-x-hidden fixed top-0 right-0 left-0 z-50 justify-center items-center w-full md:inset-0 h-[calc(100%-1rem)] max-h-full">
    <div class="relative p-4 w-full max-w-md max-h-full">
        <div class="relative bg-white rounded-lg shadow dark:bg-gray-700">
            <button type="button" class="absolute top-3 end-2.5 text-gray-400 bg-transparent hover:bg-gray-200 hover:text-gray-900 rounded-lg text-sm w-8 h-8 ms-auto inline-flex justify-center items-center" data-modal-hide="popup-modal-2">
                <svg class="w-3 h-3" aria-hidden="true" xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 14 14">
                    <path stroke="currentColor" stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="m1 1 6 6m0 0 6 6M7 7l6-6M7 7l-6 6" />
                </svg>
                <span class="sr-only">Close modal</span>
            </button>
            <form id="deleteForm" asp-action="Delete" asp-controller="PatientRecord" asp-route-householdNo="@Model.HouseholdNo" asp-route-requestUrl="@Model.RequestUrl">
                <div class="p-4 md:p-5 text-center">
                    <svg class="mx-auto mb-4 text-gray-400 w-12 h-12 dark:text-gray-200" aria-hidden="true" xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 20 20">
                        <path stroke="currentColor" stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 11V6m0 8h.01M19 10a9 9 0 1 1-18 0 9 9 0 0 1 18 0Z" />
                    </svg>
                    <h3 class="mb-5 text-lg font-normal text-gray-500">Are you sure you want to delete this record?</h3>
                    <button data-modal-hide="popup-modal-2" type="button" class="py-2.5 px-5 ms-3 text-sm font-medium text-gray-900 focus:outline-none bg-white rounded-lg border border-gray-200 hover:bg-gray-100 hover:text-blue-700 focus:z-10 focus:ring-4 focus:ring-gray-100 dark:focus:ring-gray-700 dark:bg-gray-800 dark:text-gray-400 dark:border-gray-600 dark:hover:text-white dark:hover:bg-gray-700">No, cancel</button>
                    <button data-modal-hide="popup-modal-2" type="submit" class="text-white bg-red-600 hover:bg-red-800 focus:ring-4 focus:outline-none focus:ring-red-300 dark:focus:ring-red-800 font-medium rounded-lg text-sm inline-flex items-center px-5 py-2.5 text-center">
                        Yes, I'm sure
                    </button>
                </div>
            </form>
        </div>
    </div>
</div>

    <script>
        document.addEventListener('DOMContentLoaded', function () {
            var deleteButtons = document.querySelectorAll('.delete-btn');
            var deleteForm = document.getElementById('deleteForm');

            deleteButtons.forEach(function (button) {
                button.addEventListener('click', function () {
                    var memberId = button.getAttribute('data-member-id');
                    var actionUrl = `/PatientRecord/Delete/${memberId}?householdNo=${@Model.HouseholdNo}`;
                    deleteForm.setAttribute('action', actionUrl);
                });
            });
        });
    </script>

@section Scripts {
    @{
        await Html.RenderPartialAsync("Prints/_PrintDialogWithId");
    }
}