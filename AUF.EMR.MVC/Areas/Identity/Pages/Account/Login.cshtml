@page
@model LoginModel

@{
    Layout = "_NewLayout";
    ViewData["Title"] = "Log in";
}

@if (Model.ErrorMessage != null)
{
    <div id="alert-border-1" class="flex items-center p-4 mb-4 text-red-800 border-t-4 border-red-300 bg-red-50" role="alert">
        <svg class="flex-shrink-0 w-4 h-4" aria-hidden="true" xmlns="http://www.w3.org/2000/svg" fill="currentColor" viewBox="0 0 20 20">
            <path d="M10 .5a9.5 9.5 0 1 0 9.5 9.5A9.51 9.51 0 0 0 10 .5ZM9.5 4a1.5 1.5 0 1 1 0 3 1.5 1.5 0 0 1 0-3ZM12 15H8a1 1 0 0 1 0-2h1v-3H8a1 1 0 0 1 0-2h2a1 1 0 0 1 1 1v4h1a1 1 0 0 1 0 2Z" />
        </svg>
        <div class="ms-3 text-sm font-medium">
            @Model.ErrorMessage
        </div>
        <button type="button" class="ms-auto -mx-1.5 -my-1.5 bg-red-50 text-red-500 rounded-lg focus:ring-2 focus:ring-red-400 p-1.5 hover:bg-red-200 inline-flex items-center justify-center h-8 w-8" data-dismiss-target="#alert-border-1" aria-label="Close">
            <span class="sr-only">Dismiss</span>
            <svg class="w-3 h-3" aria-hidden="true" xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 14 14">
                <path stroke="currentColor" stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="m1 1 6 6m0 0 6 6M7 7l6-6M7 7l-6 6" />
            </svg>
        </button>
    </div>
}

<section class="flex items-center justify-center h-screen">
    <div class="flex flex-col items-center justify-center px-6 py-8 mx-auto md:h-screen lg:py-0 w-full">
        <img src="~/img/logo.png" width="120" height="120" />
        <div class="w-login md:mt-0 sm:max-w-md xl:p-0">
            <div class="p-6 space-y-4 md:space-y-6 sm:p-8">
                <h1 class="text-3xl font-bold text-center text-gray-800 md:text-2xl mb-12">
                    Login
                </h1>
                <form class="space-y-4 md:space-y-6" id="account" method="post">
                    <div>
                        <label asp-for="Input.Username" class="block mb-2 text-sm text-gray-700">Username</label>
                        <input asp-for="Input.Username" type="text" class="border border-gray-300 text-gray-900 focus:outline-none focus:ring-0 focus:border-gray-900 sm:text-sm rounded-lg block w-full p-2.5" required="true">
                        <span asp-validation-for="Input.Username" class="block mb-2 text-sm text-red-700"></span>
                    </div>
                    <div>
                        <label asp-for="Input.Password" class="block mb-2 text-sm text-gray-700">Password</label>
                        <input asp-for="Input.Password" type="password" class="border border-gray-300 text-gray-900 focus:border-green-50 focus:outline-none focus:ring-0 sm:text-sm rounded-lg block w-full p-2.5" required="true">
                        <span asp-validation-for="Input.Password" class="block mb-2 text-sm text-red-700"></span>
                    </div>
                    <div class="flex items-center justify-end">
                        <div class="flex items-start">
                            <div class="flex items-center h-5">
                                <input asp-for="Input.RememberMe" id="remember" aria-describedby="remember" type="checkbox" class="w-4 h-4 border border-gray-300 rounded bg-gray-50 focus:ring-3 focus:ring-primary-300 dark:bg-gray-700 dark:border-gray-600 dark:focus:ring-primary-600 dark:ring-offset-gray-800">
                            </div>
                            <div class="ml-3 text-sm">
                                <label asp-for="Input.RememberMe" for="remember" class="text-gray-500 dark:text-gray-300">Remember me</label>
                            </div>
                        </div>
                    </div>
                    <button id="login-submit" type="submit" class="w-full h-12 text-white bg-primary-50 font-bold rounded-lg text-lg px-5 py-2.5 text-center">Log in</button>
                    <p class="text-sm mt-6 text-center font-light text-gray-500">
                        Forgot your password? Please contact the admin.
                    </p>
                </form>
            </div>
        </div>
    </div>
</section>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
